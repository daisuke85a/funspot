<%= render 'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>レッスンの登録</h2>

		<%= form_for @lesson do |f| %>

        <div class="form-group">
          <%= f.label :タイトル %><br />
          <%= f.text_field :title,:class => "form-control",:placeholder => "タイトル", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :募集人数 %><br />
          <%= f.text_field :req_num,:class => "form-control",:placeholder => "募集人数" %>
        </div>

        <div class="form-group">
          <%= f.label :概要 %><br />
          <%= f.text_area :summary,:class => "form-control",:placeholder => "概要" %>
        </div>

        <div class="form-group">
          <%= f.label :内容 %><br />
          <%= f.text_area :content,:class => "form-control",:placeholder => "内容" %>
        </div>

        <div class="actions">
          <%= f.submit "レッスンを登録",class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>